extends ../layouts/main-layout.pug

block styles
  link(rel="stylesheet", href="orders.css")

block content
  main
    if orders.length > 0
      ul.orders
        each order in orders
          li.orders__item
            h1 Order - # #{order._id}
            ul.orders__products
              each product in order.products
                li.orders__products-item #{product.title} (#{product.orderItem.quantity})
    else
      h1 Nothing here.
