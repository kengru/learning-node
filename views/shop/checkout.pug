extends ../layouts/main-layout.pug

block styles
  link(rel="stylesheet", href="/css/cart.css")

block content
  main
    ul.cart__item-list
      each product in products
        li.cart__item 
          h1 #{product.product.title} 
          h2 Quantity: #{product.quantity}
    hr
    div.centered
      h2 Total: $ #{totalSum}
